const economy = {
    '+50581261007': 1000,
    // Agrega mÃ¡s usuarios y sus riquezas aquÃ­
};

client.on('message', async msg => {
    if (msg.body === '!top10') {
        const top10 = Object.entries(economy)
            .sort((a, b) => b[1] - a[1])
            .slice(0, 10)
            .map(([number, wealth], index) => `${index + 1}. ${number}: ${wealth} monedas`)
            .join('\n');
        msg.reply(`ğŸ† Top 10 MÃ¡s Ricos ğŸ†\n${top10}`);
    }
});
